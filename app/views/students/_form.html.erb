<%= form_with(model: student) do |form| %>
  <% if student.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
        <% student.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :dorm, style: "display: block" %>
    <%= form.check_box :dorm, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :experience, style: "display: block" %>
    <%= form.number_field :experience, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :teacher, style: "display: block" %>
    <%= form.check_box :teacher, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :school, style: "display: block" %>
    <%= form.text_field :school, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :language, style: "display: block" %>
    <%= form.text_field :language, class:"form-control" %>
  </div>

  <div>
    <%= form.submit class:"btn btn-secondary my-button" %>
  </div>
<% end %>
