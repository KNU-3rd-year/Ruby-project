<p style="color: green"><%= notice %></p>

<h1><%= t 'students.list' %></h1>

<table class="table table-striped table-bordered table-hover">
  <thead class="thread-dark">
    <tr>
      <th><%= t 'students.name' %></th>
      <th><%= t 'students.dormitory' %></th>
      <th><%= t 'students.experience' %></th>
      <th><%= t 'students.teacher' %></th>
      <th><%= t 'students.school' %></th>
      <th><%= t 'students.language' %></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
        <tr>
          <td><%= student.name %></td>
          <td><%= student.dorm %></td>
          <td><%= student.experience %></td>
          <td><%= student.teacher %></td>
          <td><%= student.school %></td>
          <td><%= student.language %></td>
          <td><%= link_to t('action.show'), student %></td>
          <td><%= link_to t('action.edit'), edit_student_path(student) %></td>
          <td><%= link_to t('action.delete'), student, method: :delete, data: {confirm: t('action.sure')}%></td>
        </tr>
    <% end %>
  </tbody>
</table>
<%= link_to t('button.new_student'), new_student_path, class:"btn btn-secondary my-button" %>